<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fpuna.py.com.appolympos.fragments.ClientsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <android.support.v7.widget.SearchView
            android:id="@+id/search_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="@string/prompt_search"
            app:defaultQueryHint="@string/prompt_search"
            app:iconifiedByDefault="false"></android.support.v7.widget.SearchView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_cliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>
