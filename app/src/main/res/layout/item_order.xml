<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_margin"
    android:paddingEnd="@dimen/default_margin"
    android:paddingStart="@dimen/default_margin"
    android:paddingTop="@dimen/default_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_order_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/default_margin"
                app:srcCompat="@mipmap/ic_shopping_cart_black_36dp" />

            <TextView
                android:id="@+id/item_order_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_order_icon"
                android:layout_toRightOf="@+id/item_order_icon"
                android:maxLength="15"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_order_amount"
                android:layout_toEndOf="@+id/item_order_icon"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/item_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <ImageView
                android:id="@+id/item_order_icon_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_order_date"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_done_black_24dp" />

            <TextView
                android:id="@+id/item_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_order_client"
                android:layout_toEndOf="@+id/item_order_icon"
                android:layout_toRightOf="@+id/item_order_icon"
                android:text="TextView" />

            <ImageView
                android:id="@+id/item_order_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/item_order_date"
                android:layout_marginEnd="@dimen/default_margin"
                app:srcCompat="@mipmap/ic_more_vert_black_36dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>